<% include ../partials/header %>

<section class="hero is-primary is-bold is-fullheight">
  <% include ../partials/navbar %>

  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Log In</h3>
        <p class="subtitle has-text-grey">Welcome back! Please log in.</p>
        <div class="box">
          <!-- show any messages that come back with authentication -->
          <% if (message.length > 0) { %>
          <div class="notification is-danger"><button class="delete"></button>
            <%= message %>
          </div>
          <% } %>
          <form action="/login" method="post">
            <div class="field">
              <label style="display:flex;">username:</label>
              <div class="control">
                <input class="input is-large is-primary" type="text" placeholder="Your name" autofocus="" name="username" required>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <label style="display:flex;">Password:</label>
                <input class="input is-large is-primary" type="password" placeholder="Your Password" name="password" required>
              </div>
            </div>
            <button class="button is-block is-info is-large
                      is-fullwidth">Log In</button>
          </form>
        </div>
        <p class="has-text-grey">
          <a href="/signup">Sign Up</a> &nbsp;·&nbsp;
          <a href="/">Home</a> &nbsp;·&nbsp;
          <a href="/login">Log In</a>
        </p>
      </div>
    </div>
  </div>
</section>

<% include ../partials/footer %>